{
    "name": "rightonit1/wordpress",
    "description": "WordPress сайт с управлением плагинами через Composer",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "rightonit1",
            "email": "rightonit1@rightonit1.by"
        }
    ],
    "repositories":[
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=7.4",
        "johnpbloch/wordpress": "^6.0",
        "composer/installers": "^2.0",

        "wpackagist-plugin/advanced-custom-fields": "^6.2",
        "wpackagist-plugin/akismet": "^5.5",
        "wpackagist-plugin/classic-editor": "^1.6",
        "wpackagist-plugin/query-monitor": "^3.7",
        "wpackagist-plugin/wordpress-importer": "^0.9",
        "wpackagist-plugin/wp-fastest-cache": "^1.4"
    },
    "require-dev": {
        "wp-cli/wp-cli": "^2.8"
    },
    "extra": {
        "installer-paths": {
            "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "wp-content/themes/{$name}/": ["type:wordpress-theme"],
            "wp-content/mu-plugins/{$name}/": ["type:wordpress-mu-plugin"]
        },
        "wordpress-install-dir": "wp"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "johnpbloch/wordpress-core-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform-check": false
    },
    "scripts": {
        "post-install-cmd": [
            "echo 'Установка завершена!'"
        ],
        "post-update-cmd": [
            "echo 'Обновление завершено!'"
        ]
    },
    "autoload": {
        "psr-4": {
            "GoldTeamMinsk\\": "app/"
        }
    }
}